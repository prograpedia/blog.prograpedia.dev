---
import Layout from './Layout.astro';
import { formatDate } from '../utils';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <article class="prose lg:prose-xl dark:prose-invert dark:lg:prose-xl mx-auto mb-10">
    <h1>{frontmatter.title}</h1>
    <p class="text-gray-600">
        Publicado el {formatDate(frontmatter.pubDate)} por {frontmatter.author}
        <br/>
        {frontmatter.lastUpdated && `Última actualización: ${frontmatter.lastUpdated}`}
    </p>
    <slot />
  </article>
  <script id="giscus-loader" src="https://giscus.app/client.js"
          data-repo="prograpedia/blog.prograpedia.dev"
          data-repo-id="R_kgDONSDd1Q"
          data-category="Blog Post Comments"
          data-category-id="DIC_kwDONSDd1c4Cnafd"
          data-mapping="url"
          data-strict="0"
          data-reactions-enabled="1"
          data-emit-metadata="0"
          data-input-position="bottom"
          data-theme="light"
          data-lang="es"
          crossorigin="anonymous"
          async>
  </script>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Blog from "../components/Blog.astro";

const posts = await getCollection('blog');
const latestPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 9);
---

<Layout title="Welcome to Prograpedia">
  <section class="prose dark:prose-invert max-w-none fuck text-center mb-12">
    <h1 class="mb-4">Welcome to Prograpedia</h1>
    <p class="text-gray-600 dark:text-gray-400">Your comprehensive guide to programming knowledge and experiences.</p>
  </section>

  <section>
    <h2 class="text-3xl font-bold mb-6 dark:text-gray-400">Latest Posts</h2>
    <div class="space-y-8 grid gap-3 grid-cols-3">
      {latestPosts.map(post => (
        <Blog post={post}></Blog>
      ))}
        <div></div>
    </div>
    
    <div class="mt-8 text-center">
      <a href="/blog" class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">
        View All Posts
      </a>
    </div>
  </section>
</Layout>

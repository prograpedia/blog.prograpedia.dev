---
import { formatDate } from '../utils.js'
const {post} = Astro.props;
---
<article class="bg-white dark:bg-gray-900 rounded-lg shadow-sm hover:translate-y-0.5">
    {post.data.image && <img class="w-full" src={post.data.image} alt="header"/>}
    <div class="p-6">
        <h3 class="text-2xl font-bold mb-2">
            <a href={`/blog/${post.slug}/`} class="text-gray-900 dark:text-gray-100 hover:text-blue-600">
                {post.data.title}
            </a>
        </h3>
        <p class="text-gray-600 dark:text-gray-400 mb-4">{formatDate(post.data.pubDate)} por {post.data.author}</p>
        <p class="text-gray-700 dark:text-gray-300">{post.data.description}</p>
    </div>
</article>
